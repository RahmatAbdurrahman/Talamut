<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvWasteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Sampah"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWasteType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipe Sampah"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Quantity ditambahkan di sini -->
        <TextView
            android:id="@+id/tvWasteQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah: 0"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Row untuk tanggal dan tombol delete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end|center_vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvWasteDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Tanggal"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
